<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/emjio_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="表情包设置" />

    <Button
        android:id="@+id/change_emjio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/emjio_code"
        android:text="显示" />

    <TextView
        android:gravity="center"
        android:id="@+id/show_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/change_emjio"
        android:layout_alignTop="@+id/change_emjio"
        android:layout_toEndOf="@id/change_emjio"
        android:text=" 表情包!" />
</RelativeLayout>