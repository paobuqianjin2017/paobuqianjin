<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.paobuqianjin.pbq.step.view.base.view.PaoBuScrollView
        android:id="@+id/member_info_desc_scroll"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <FrameLayout
                android:id="@+id/select_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_outline" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selected_icon" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toEndOf="@+id/select_user_icon">

                <ImageView
                    android:id="@+id/member_head_icon_in_circle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/member_name_in_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/member_head_icon_in_circle"
                    android:text="成员名称"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_modify_dear"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="121dp"
                    android:layout_toEndOf="@+id/member_name_in_circle"
                    android:background="@color/color_6c71c4"
                    android:text="修改昵称"
                    android:textColor="@color/color_f8"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/bt_delete_admin"
                    android:layout_width="108dp"
                    android:layout_height="80dp"
                    android:layout_toEndOf="@+id/btn_modify_dear"
                    android:background="@color/color_e1e3fc"
                    android:text=" 设为管理员"
                    android:textColor="@color/color_161727" />
            </RelativeLayout>

        </RelativeLayout>
    </com.paobuqianjin.pbq.step.view.base.view.PaoBuScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/member_info_desc_scroll"
        android:layout_marginLeft="70dp"
        android:background="@color/color_ebebed" />
</RelativeLayout>